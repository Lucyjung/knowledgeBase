<div id="admin-member-component">
<table class="table" id="admin-member-list">
    <thead>
        <tr class = "active">
            <th>
                No.
            </th>
            <th>
                Employee Number
            </th>
            <th>
                Employee Name
            </th>
            <th align="center">
                User Level
            </th>
            <th></th>	
            <th></th>		
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-6">
        <a id="Add_Modal" href="#AddUser_Modal" role="button" class="btn_TTT" data-toggle="modal">Add User</a>

        <tab1></tab1>
        <button type="button" class='btn_TTT' id="admin-member-apply-button" disabled>&nbsp Apply &nbsp</button>
    </div>

</div>    

    
<div class="modal fade" id="DeleteUser_Modal" role="dialog" aria-labelledby="DeleteUser_ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="DeleteUser_ModalLabel">
                    Confirm to Delete 
                </h4>
            </div>
            <div class="modal-body">
                Do you want to delete this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="admin-member-confirm-delete">
                    Delete
                </button> 
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button> 	
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ResetPass_Modal" role="dialog" aria-labelledby="ResetPass_ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        ×
                </button>
                <h4 class="modal-title" id="ResetPass_ModalLabel">
                        Confirm to Reset Password
                </h4>
            </div>
            <div class="modal-body">
                    Do you want to Reset Password of this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="admin-member-confirm-reset">
                        Reset
                </button> 
                <button type="button" class="btn btn-default" data-dismiss="modal">
                        Close
                </button> 	
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddUser_Modal" role="dialog" aria-labelledby="AddUser_ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="AddUser_ModalLabel">
                    Add New User
                </h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="form-horizontal" role="form" id="admin-member-signup-form">
                                <div class="form-group">
                                    <label for="UserID" class="col-sm-3 control-label">
                                        User ID
                                    </label>
                                    <div class="col-sm-8">
                                        <input class="form-control" name="username" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="UserName" class="col-sm-3 control-label">
                                        User Name
                                    </label>
                                    <div class="col-sm-8">
                                        <input class="form-control" name="name" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="UserLevel" class="col-sm-3 control-label">
                                        User Level
                                    </label>
                                    <div class="col-sm-8">
                                        <select class="form-control">
                                            <option name="role" value=<%= userRole.user %>>User</option>
                                            <option name="role" value=<%= userRole.admin %>>Administrator</option>
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>	
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="admin-member-signup-button">
                    Add
                </button> 
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button> 	
            </div>
        </div>
    </div>
</div>
</div>